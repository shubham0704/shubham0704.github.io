---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  url: string;
}

const { title, excerpt, date, url } = Astro.props;
---

<article class="bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold mb-2">
    <a href={url} target="_blank" class="hover:text-indigo-600">
      {title}
    </a>
  </h2>
  <p class="text-gray-500 text-sm mb-4">{date}</p>
  <p class="text-gray-600 mb-4">{excerpt}</p>
  <a href={url} target="_blank" class="text-indigo-600 hover:text-indigo-800">
    Read more â†’
  </a>
</article>